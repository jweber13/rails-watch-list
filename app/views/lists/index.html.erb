<div class="page-frame-content">
  <div class="page-frame-header">
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1596972812018-6385b8bd3e13?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2946&q=80);">
      <h1>Movie Lists</h1>
      <%= link_to "Add A List", new_list_path, class: 'btn btn-light mt-2'  %>
    </div>
  </div>
  <div class="page-frame-body">
    <div class="list-card-container">
      <% @lists.each do |list| %>
        <div class="list-card">
          <img src=<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>>
          <h5><%= link_to list.name, list_path(list), class: 'text-secondary text-decoration-none'%></h5>
          <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: "delete #{list.name}?" } do %>
            <span class="fa fa-trash" style="color: black"></span>
          <% end %>
        </div>
      <%end%>
    </div>
  </div>
  <div class="page-frame-footer">
  </div>
</div>
