<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80);">
  <div class="container">
    <h1><%=@list.name%></h1>
    <%= link_to 'Create a Bookmark', new_list_bookmark_path(@list), class: 'btn btn-light mt-5'%>
  </div>
</div>
<div class="container mt-3">
  <div class="cards">
    <%@list.bookmarks.each do |bookmark|%>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">
        <div class="background-fade">
          <h2><%=bookmark.movie.title%></h2>
          <p><%bookmark.movie.rating.times do %><%='⭐️'%><%end%></p>
        </div>
        <div>
          <h5><i><%=bookmark.movie.overview%></i></h5>
          <p><%= link_to 'X', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "delete #{bookmark.movie.title} from #{@list.name}?" }, class: 'card-remove-link'%></p>
          <h4><%=bookmark.comment%></h4>
        </div>
      </div>
    <%end%>
  </div>
  <%= link_to 'Lists', lists_path, class: 'btn btn-light mt-2'%>
</div>
